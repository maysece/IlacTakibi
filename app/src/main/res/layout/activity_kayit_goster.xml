<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.KayitGoster">
    <TextView
        android:id="@+id/welcomeTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Kayıt Görüntüleme Ekranı"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/madimi_one"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintVertical_bias="0.05"
        android:gravity="center"
        android:textColor="@color/mavi"
        />
    <Button
        android:id="@+id/listeleBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/welcomeTxt"
        app:layout_constraintEnd_toEndOf="@id/welcomeTxt"
        app:layout_constraintTop_toBottomOf="@id/welcomeTxt"
        android:text="Kullanıcı Listele"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/madimi_one"
        android:textStyle="bold"
        android:backgroundTint="@color/mavi"
        />
    <ListView
        android:id="@+id/kullanicilisteLV"
        android:layout_width="0dp"
        android:layout_height="250dp"
        app:layout_constraintStart_toStartOf="@id/welcomeTxt"
        app:layout_constraintEnd_toEndOf="@id/welcomeTxt"
        app:layout_constraintTop_toBottomOf="@id/listeleBtn"
        android:layout_marginTop="30dp"
        />
    <Button
        android:id="@+id/ilacListeBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/welcomeTxt"
        app:layout_constraintEnd_toEndOf="@id/welcomeTxt"
        app:layout_constraintTop_toBottomOf="@id/kullanicilisteLV"
        android:text="İlaçları Listele"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/madimi_one"
        android:backgroundTint="@color/mavi"
        android:layout_marginTop="20dp"
        />
    <ListView
        android:id="@+id/ilacListView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/welcomeTxt"
        app:layout_constraintEnd_toEndOf="@id/welcomeTxt"
        app:layout_constraintTop_toBottomOf="@id/ilacListeBtn"
        android:layout_marginTop="20dp"
        />






</androidx.constraintlayout.widget.ConstraintLayout>